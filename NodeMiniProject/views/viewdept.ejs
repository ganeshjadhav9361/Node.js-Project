<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>View All Department</title>

    <script type="text/javascript" src="ajax.js" ></script>
</head>
<body>
    
    <%- include("home.ejs") %>
    <br><br>
    <div class="container bg-dark p-5">
        <% if (typeof msg !== 'undefined' && msg) { %>
  <div class="alert alert-success">
    <%= msg %>
  </div>
<% } %>

         <div class="form-group">
            <input type="text" class="form-control control" name="name" 
                placeholder="Enter Department name" onkeyup="searchDept(this.value)"/>
        </div>
    <table class="table text-white"> 
        <tr>
            <th>SR NO</th>
            <th> DEPARTMENT NAME</th>
            <th> DELETE</th>
            <th> UPDATE</th>
        </tr>
        <tbody id="tblBody">
        <%
        if(deptList.length!=0){
        deptList.forEach((row,index)=>{
        %>
        <tr>
            <td><%=index+1%></td>
            <td><%=row.deptname%></td>
            <td><a href="/deldept?did=<%=row.deptid%>">DELETE</a></td>
            <td><a href="/upddept?dn=<%=row.deptname%>&did=<%=row.deptid%>">UPDATE</a></td>
        </tr>
        <%
        });
    }
        else{
            %>
            <tr><td colspan="4">Not Data Found</td></tr>
        <%
        }
        %>
        
        </tbody>
    </table class="table text-white">
    </div>
</body>
</html>